<!DOCTYPE html>

@{
    ViewBag.Brand = "BrandName";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title | @ViewBag.Brand</title>
    @Styles.Render("~/Content/css")
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" title="@ViewBag.Brand">
                    <div><span><img src="~/Images/favicon.png" alt="@ViewBag.Brand Logo" height="50" /></span> @ViewBag.Brand &nbsp;</div>
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse" aria-expanded="false">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <hr />
            <p class="text-muted">&copy; @DateTime.Now.Year @ViewBag.Brand All rights reserved.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @if (Request.IsAuthenticated)
    {
        @Scripts.Render("~/bundles/LoginTimeout")
    }
    @RenderSection("scripts", false)
</body>
</html>